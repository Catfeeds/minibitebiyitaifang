        <view class="boxx">
              <view class="ming">{{item.name}}</view>
              <view class="digest" wx:if="{{item.digest}}">{{item.digest}}...</view>
         </view>
    </view>
    <view class="clear mt10" bindtap="getMore" wx:if="{{list}}">点击查看更多</view>
</view>
</view>