<view class="personal_data">
  <view class="personal">
    <view class="personal_head">
      <view class="personal_top">
        <text class="user_name">{{userInfo.nickName}}</text>
        <text class="user_profession">{{userinfo.job}}</text>
      </view>
      <image src="{{userInfo.avatarUrl}}"></image>
    </view>
    <view class="phone">
      <view>电话</view>
      <text>{{userinfo.tel}}</text>
    </view>
    <view class="phone">
      <view>公司</view>
      <text class="color">{{userinfo.company}}</text>
    </view>
    <view class="phone">
      <view>Email</view>
      <text class="color">{{userinfo.email}}</text>
    </view>
    <view class="phone">
      <view>微信号</view>
      <text class="color">{{userinfo.weixin}}</text>
    </view>
    <view class="phone">
      <view>性别</view>
      <text class="color" wx:if="{{userinfo.sex==0}}">保密</text>
      <text class="color" wx:if="{{userinfo.sex==1}}">男</text>
      <text class="color" wx:if="{{userinfo.sex==2}}">女</text>
    </view>
  </view>
</view>

  <view class="textarea" wx:if="{{userinfo.intro != ''}}">
    <view class="textarea_text">更多 </view>
    <textarea bindblur="bindTextAreaBlur"  disabled="false" id="textarea" >{{userinfo.intro}}
    </textarea>
  </view>
   <view class="textarea" wx:if="{{userinfo.intro == ''}}">
    <view class="textarea_text">更多 </view>
    <textarea bindblur="bindTextAreaBlur" placeholder="这个人很懒，什么都没留下...." disabled="false" >
    </textarea>
  </view>
  <view class="buttom">
     <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="primary"> 编辑 </button> 
  </view>