.personal_head image {
  width: 130rpx;
  height: 130rpx;
  border: 1px solid #d9d9d9;
  border-radius: 6px;
  vertical-align: middle;
  margin-right: 20rpx;
}
.personal_head {
  margin-top: 50rpx;
  background: #fff;
  padding-bottom: 20rpx;
  display: flex; 
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  color: #58585c;
}
.user_name {
  font-size: 60rpx;
  margin-right: 30rpx;
}
.personal {
  background: #fff;
  padding-left: 30rpx;
  font-family: "微软雅黑";

}
.personal_top {
  margin:20rpx 0;
}
page {
  height: 100%;
  width: 100%;
  background: #efeff4;
  box-sizing: border-box;
  font-size: 35rpx;
}
.phone {
  display: flex;
  padding: 20rpx 0;
}
.phone text {
  margin-left:20rpx;
  color: #10aeff;
  font-size: 28rpx;
  width: 62%;
  word-break: break-all;
}
.phone view {
  width: 15%;
  color: #82939e;
  font-size: 30rpx;
}
.phone .color {
  color: #000000;
}
.phone_button {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}
/*textarea  */
.textarea {
  display: flex;
  border-bottom: 1px solid #d9d9d9;
  border-top: 1px solid #d9d9d9;
  background: #fff;
  padding-top: 20rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
  margin-top: 40rpx;
}
.textarea_text {
  width: 20%;
  padding-left:20rpx;
  color:#82939e;

}
.textarea textarea {
    height: 150rpx; 
}

.personal_data {
  padding: 0 30rpx;
}
.buttom {
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 470rpx;
}
.buttom button {
  /* background: #fff; */
  border: 1px solid #d9d9d9;
  font-family: "微软雅黑";
  width: 205rpx;
  height: 80rpx;
  font-size: 30rpx;
  float: right;
}
.yard {
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto;
  margin-bottom: 90rpx;
}
.yard image {
  width: 100%;
  height: 100%;
}