page {
  background: #fff;
  font-family: '微软雅黑';
}

video {
  height: 100%;
  width: 100%;
}

.btn-area {
  margin: 40rpx 20rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.shuoming {
  border-bottom: 1px solid #f5f5f5;
  font-size: 33rpx;
  padding-bottom: 20rpx
}

.orderDetails {

  background: #fff;
}

.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.orderListTitle .userImg {
  float: left;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  margin: 15rpx;
}

.orderListTitle .userImg image {
  border-radius: 35rpx;
  width: 100%;
  height: 100%;
}

.orderListTitle .userName {
  padding-right: 50rpx;
  background: url(../../../images/member_list_arrow.png) no-repeat 90% center;
  background-size: 35rpx 35rpx;
}

.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 34rpx;
}

.orderListDetails {
  display: flex;
  border-bottom: 1rpx solid #f3f3f3;
  padding-top: 30rpx
}

.orderListDetails .productImg {
  flex: 1.5;
  height: 170rpx;
 
  margin-left: 20rpx;
}

.orderListDetails .productImg .img1 {
  width: 170rpx;
  height: 170rpx;
  display: block;
  float: left;
}

.orderListDetails .productInfo {
  flex: 4;
  padding: 20rpx 30rpx;
}

.orderListDetails .productInfo .productTitle {

  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  /*margin-top: 11rpx;*/
}

.shan {
  font-size: 30rpx;
  float: left;
  color: #ccc;
}

.product {
  font-size: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.productPrice {
  font-size: 38rpx;
  font-weight: 900;
  color: red;
  margin-top: 11rpx;
}

.orderListDetails .productInfo .productQuantity {
  float: right;
}

.fs {
  margin-top: 24rpx;
}

.productCount {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.productCount>view {
  float: right;
  margin-right: 30rpx;
}

.productQuantity {
  border: 1px solid orangered;
  padding: 10rpx;
  font-size: 30rpx;
}
.tuijian{
  font-size: 37rpx;
  padding: 20rpx 0;
}
.bo {

  width: 170rpx;
  height: 170rpx;

 
  background: rgba(0, 0, 0, 0.1);

}

image {
  overflow: inherit;
}

.bo image {
width:70%;
height:70%;
display:block;
opacity:0.8;
margin:0 auto;
padding-top:25rpx;

}
.mt10{
  margin: 0 auto;
  text-align: center;
  height: 70rpx;
  width: 450rpx;
  line-height: 70rpx;
  border-radius:60rpx; 
  border: 1px solid #999;
  color: #999;
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.productDigest{
  font-size: 20rpx;
  color: #666;
}